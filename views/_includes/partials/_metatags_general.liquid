{% assign base = "https://suttas.web.app" %}

<title>{{ title }}</title>
<meta
    name="type"
    property="og:type"
    content="website" />
<meta
    name="title"
    property="og:title"
    content="{{ title }}" />
<meta
    name="url"
    property="og:url"
    content="{{ base }}" />
<meta
    name="description"
    property="og:description"
    content="{{ description }}" />
<meta
    name="image"
    property="og:image"
    content="{{ base }}/assets/site-image.jpg" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@suttabasket" />
<meta name="twitter:title" content="{{ title }}" />
<meta name="twitter:description" content="{{ description }}" />
<meta name="twitter:image" content="{{ base }}/assets/site-image.jpg" />

<link
    rel="icon"
    href="/favicon-32x32.png"
    type="image/png" />

<link rel="manifest" href="/site.webmanifest" />