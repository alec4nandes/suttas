{% assign base = "https://suttas.web.app" %}

{% if post.image_url == "" %}
    {% assign image_url = "{{ base }}/assets/site-image.jpg" %}
{% else %}
    {% assign image_url = "{{ base }}{{ post.image_url }}" %}
{% endif %}

<meta
    name="type"
    property="og:type"
    content="website" />
<meta
    name="title"
    property="og:title"
    content="{{ post.title }}" />
<meta
    name="url"
    property="og:url"
    content="{{ base }}/suttas/{{ post.id | slugify }}.html" />
<meta
    name="description"
    property="og:description"
    content="{{ post.subtitle }}" />
<meta
    name="image"
    property="og:image"
    content="{{ image_url }}" />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@suttabasket" />
<meta name="twitter:title" content="{{ post.title }}" />
<meta name="twitter:description" content="{{ post.subtitle }}" />
<meta name="twitter:image" content="{{ image_url }}" />